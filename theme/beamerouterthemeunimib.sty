\mode<presentation>

% Frame title
\defbeamertemplate*{frametitle}{unimib}[1][]
{%
  \ifbeamercolorempty[bg]{frametitle}{}{\nointerlineskip}%
  %\@tempdima=\textwidth%
  %\advance\@tempdima by\beamer@leftmargin%
  %\advance\@tempdima by\beamer@rightmargin%
  \begin{tikzpicture}[remember picture,overlay]
    \fill[UniRed] (0.05,0) rectangle (0.2,1.5);
  \end{tikzpicture}
  \begin{beamercolorbox}[ht=36pt,sep=0.3cm,#1,wd=\the\@tempdima]{frametitle}
    \usebeamerfont{frametitle}%
    \vbox{}\vskip-1ex%
    \if@tempswa\else\csname beamer@fte#1\endcsname\fi%
    \strut\insertframetitle\strut\par%
    {%
      \ifx\insertframesubtitle\@empty%
      \else
      \vskip-4pt%
      {\usebeamerfont{framesubtitle}\usebeamercolor[fg]{framesubtitle}\strut\insertframesubtitle\strut\par}%
      \fi
    }%
    \vskip-1ex%
    \if@tempswa\else\vskip-.3cm\fi
  \end{beamercolorbox}%
  
  \begin{tikzpicture}[remember picture,overlay]
    \node[anchor=north west, inner sep = 2pt, fill=white,  yshift=.2cm, minimum height =50pt, xshift=0cm, text width =2cm, align=center] at (current page.north west) {\includegraphics[height=34pt]{graphics/logo_dcb_500x500.png}};
\end{tikzpicture}
}

% Frame footer
\setbeamertemplate{footline}
{
  \ifnum \theframenumber=1
  % Frame footer titlepage
  
  \else
  % Frame footer others
  
  \leavevmode%
  \hbox{%
  \begin{beamercolorbox}[wd=.25\paperwidth,ht=2.5ex,dp=1ex,left]{author in head/foot}%
    \hspace*{2ex} \usebeamerfont{author in head/foot}\insertshortauthor
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.70\paperwidth,ht=2.5ex,dp=1ex,center]{title in head/foot}%
    \usebeamerfont{title in head/foot}\insertshorttitle
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.05\paperwidth,ht=2.5ex,dp=1ex,right]{date in head/foot}%
    \usebeamerfont{date in head/foot} \insertframenumber{} \hspace*{2ex} 
  \end{beamercolorbox}}%
  \vskip0pt%
  \fi
}
