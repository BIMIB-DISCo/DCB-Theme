\mode<presentation>

% University of Udine theme colors
\definecolor{DISCoGreen}{RGB}{0,117,59}
\definecolor{UniRed}{RGB}{156, 43, 32}
\definecolor{UniGray}{RGB}{207,207,207}
\definecolor{Accent1}{RGB}{156, 157, 196}
\definecolor{Accent2}{RGB}{238, 237, 173}

% Normal text
\setbeamercolor{normal text}{fg=black}

% First page
\setbeamercolor*{title}{fg=black,bg=UniRed}
\setbeamercolor*{author}{fg=black,bg=white}
\setbeamercolor*{date}{fg=black,bg=white}

% Generic frames header and footer
\setbeamercolor{titlelike}{fg=black}
\setbeamercolor*{frametitle}{fg=black, bg=white}
\setbeamercolor*{framesubtitle}{fg=black, bg=white}
\setbeamercolor*{title in head/foot}{fg=black}
\setbeamercolor*{author in head/foot}{fg=black}
\setbeamercolor*{date in head/foot}{fg=black, bg=white}

%Blocks
\setbeamercolor{block title}{bg=UniRed!40,fg=black}
\setbeamercolor{block title alerted}{bg=Accent2!90,fg=black}
\setbeamercolor{block title example}{bg=Accent1!60,fg=black}
\setbeamercolor{block body}{bg=UniRed!20,fg=black}
\setbeamercolor{block body alerted}{bg=Accent2!30,fg=black}
\setbeamercolor{block body example}{bg=Accent1!30,fg=black}

% Lists
\setbeamercolor*{item}{fg=UniRed}

% Quotation and quote
\setbeamercolor*{quotation}{fg=black,bg=UniGray!30}

% Verse
\setbeamercolor*{verse}{fg=black,bg=MidnightBlue!5}

% Abstract
\setbeamercolor*{abstract}{fg=black,bg=MidnightBlue!5}

% Table of contents 
\setbeamercolor*{structure}{fg=black}

% Bibliography
\setbeamercolor*{bibliography entry title}{fg=black}
\setbeamercolor*{bibliography entry author}{fg=black}
\setbeamercolor*{bibliography entry location}{fg=black!50}
\setbeamercolor*{bibliography entry note}{fg=black!50}

\mode
<all>